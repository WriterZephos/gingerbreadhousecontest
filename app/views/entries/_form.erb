<%= turbo_frame_tag(:entry_form) do %>
  <h1>New Entry For <%= @participant.name %></h1>
  <div class="form-div">
    <%= form_with(model: [@contest, @entry], data: {turbo: false}) do |form| %>
      <%= form.hidden_field :contest_id %>
      <%= form.hidden_field :participant_id %>

      <div class="field">
        <%= form.label :title %>
        <%= form.text_field :title, required: true  %>
      </div>

      <div class="field">
        <%= form.label :images, "Pictures (you may select multiple)" %>
        <%= form.file_field :images, multiple: true, required: true %><br>
      </div>

      <div class="field">
        <%= form.label :description %>
        <%= form.rich_text_area :description, required: true %>
      </div>

      <div class="actions">
        <%= form.submit %>
      </div>
    <% end %>
  </div>
<% end %>